{
	$schema: "https://docs.renovatebot.com/renovate-schema.json",
	extends: [
		"local>TWiStErRob/renovate-config",
	],
	packageRules: [
		{
			description: "Auto-merge own package, because it's still 0.x, which means each release is assumed 'breaking'.",
			matchDepNames: ["TWiStErRob/net.twisterrob.ghlint"],
			automerge: true,
		},
	],
	customManagers: [
		{
			description: "Update Renovate's pip-compile Python version.",
			customType: "regex",
			matchStringsStrategy: "any",
			matchStrings: [
				"# This file is autogenerated by pip-compile with Python (?<currentValue>.+)",
			],
			managerFilePatterns: [
				"website/requirements.txt",
			],
			datasourceTemplate: "docker",
			depNameTemplate: "python",
			versioningTemplate: "docker",
		},
	],
	pip_requirements: {
		enabled: false,
	},
	"pip-compile": {
		managerFilePatterns: [
			"website/requirements.txt",
		],
		lockFileMaintenance: {
			enabled: false,
		},
	},
}
